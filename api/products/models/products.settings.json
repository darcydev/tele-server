{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "subtitle": {
      "type": "string"
    },
    "category": {
      "model": "categories",
      "via": "products"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "prescriptions": {
      "collection": "prescriptions",
      "via": "product"
    }
  }
}
